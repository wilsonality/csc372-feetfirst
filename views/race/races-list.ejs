<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>
    <main class="races-list">
      <h1>View All Races</h1>

      <ul class="races">
        <% races.forEach (race => {%>
          <li class="race-item">
            <a href="/races/id/<%=race.id%>">
              <div class="item-top">
                <h3><%= race.title %></h3>
                <p> <%= race.description %></p>
              </div>
              <% if (race.raceimage){%>
                <img src="<%=race.raceimage%>" alt="race image" class="race-preview">
              <% } %>
            </a>
          </li>
        <% })%>
      </ul>
    </main>
  </body>

  </html>